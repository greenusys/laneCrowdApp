<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Forget_Pwd_Activity">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<!--profilelayout-->
    <LinearLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:onClick="back_activity"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:src="@drawable/back_arrow"
            android:tint="@color/black"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/user_profile_comment"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:id="@+id/user_name_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Md. Kaif"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/post_time_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25-12-2019"
                    android:textColor="@color/dark_grey"
                    android:textSize="14sp" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dehradun"
                    android:textColor="#ccc"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <!--profilelayout-->


        <LinearLayout
            android:id="@+id/media_layout2"
            android:layout_below="@id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/home_post_item"/>


        </LinearLayout>




    <LinearLayout
        android:layout_below="@id/media_layout2"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
           android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment_rv" />

    </LinearLayout>




    </RelativeLayout>

    </androidx.core.widget.NestedScrollView>





    <!--bottomlayout-->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="#fff"
        android:gravity="bottom"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfileImageComment"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile"/>

        <EditText
            android:id="@+id/edt_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:maxHeight="100dp"
            android:gravity="center_vertical"
            android:hint="write a comment..."
            android:padding="8dp"
            android:textSize="13sp"
            android:background="@drawable/shape_background_edit_text" />

        <ImageView
            android:id="@+id/iv_sendComment"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_send"
            android:clickable="true"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_oval_dark_grey"/>

    </LinearLayout>
    <!--bottomlayout-->




</RelativeLayout>


