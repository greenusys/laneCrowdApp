<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_rel"
    android:background="@drawable/test"
    tools:context=".activity.Add_Post_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--title layout-->
        <LinearLayout
            android:layout_margin="10dp"
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="60dp"
                android:src="@drawable/profile"/>


            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/txt_postUserName"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Md. Kaif" />

            <ImageView
            android:onClick="back"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="30dp"
                android:tint="@color/white"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_clear"/>


        </LinearLayout>
        <!--title layout-->


    </LinearLayout>


<!--    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/test"/>-->






    <!--bottomlayout-->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="#fff"
        android:gravity="bottom"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfileImageComment"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile"/>

        <EditText
            android:id="@+id/edt_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:maxHeight="100dp"
            android:gravity="center_vertical"
            android:hint="Reply..."
            android:padding="8dp"
            android:textSize="13sp"
            android:background="@drawable/shape_background_edit_text" />

        <ImageView
            android:id="@+id/iv_sendComment"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_send"
            android:clickable="true"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_oval_dark_grey"/>

    </LinearLayout>
    <!--bottomlayout-->






</RelativeLayout>