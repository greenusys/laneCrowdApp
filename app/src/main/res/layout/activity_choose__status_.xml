<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:background="@color/box_3"
    android:layout_height="match_parent">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--title layout-->
        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="bottom"
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:onClick="back_activity"
                android:src="@drawable/back_arrow"
                android:tint="@color/black" />


            <TextView
                android:id="@+id/txt_postUserName"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Choose Status" />

            <TextView
                android:onClick="saveTheme"
                android:gravity="right"
                android:layout_gravity="right"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Post" />

        </LinearLayout>
        <!--title layout-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/lay_theme"
            android:visibility="visible">



            <ImageView
                android:id="@+id/theme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@color/box_3"/>


            <EditText
                android:layout_marginTop="150dp"
                android:hint="What's on your mind?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center"
                android:textSize="24sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/theme_txt"
                android:background="@android:color/transparent"
                android:textColorHint="@color/dark_grey2"
                android:textColor="@color/black"/>
        </RelativeLayout>



    </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status_rv"
        />




</RelativeLayout>