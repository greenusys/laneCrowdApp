<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp">


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/date_box"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="OCTOBER 19,2019"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:visibility="gone" />

    <!--  friend layout-->
    <LinearLayout
        android:id="@+id/friend_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_my_message2"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/frnd_rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_my_message2"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/message_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="Hii       "
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/frnd_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/message_body"
                    android:layout_alignEnd="@+id/message_body"
                    android:layout_alignRight="@+id/message_body"
                    android:layout_marginTop="-5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp"
                    android:text="4:50 AM"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="italic" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
    <!--  friend layout-->


    <!--  self layout-->
    <LinearLayout
        android:id="@+id/self_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/self_rel_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/chat_my_message"
            android:orientation="vertical">


            <TextView
                android:id="@+id/my_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:elevation="2dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Hii        "
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/self_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_message"
                android:layout_alignEnd="@+id/my_message"
                android:layout_alignRight="@+id/my_message"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:text="04:50 AM"
                android:textColor="#fff"
                android:textSize="10dp"
                android:textStyle="italic" />

        </RelativeLayout>


    </LinearLayout>
    <!--  self layout-->


</LinearLayout>
